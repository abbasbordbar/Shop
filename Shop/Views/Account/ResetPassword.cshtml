@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="block">
    <div class="container" style="margin-top:200px;margin-bottom:100px;direction:rtl;text-align:right">
        <div class="row">

            <div class="col-md-6 d-flex mt-4 mt-md-0">
                <div class="card flex-grow-1 mb-0">
                    <div class="card-body">
                        <h3 class="card-title">بازیابی کلمه عبور</h3>
                        <form asp-action="ResetPassword" asp-controller="Account">
                           <input type="hidden" asp-for="ActiveCode"/>
                           <input type="hidden" asp-for="UserId"/>
                            <div class="form-group">
                                <label>رمز عبور</label>
                                <input asp-for="Password" class="form-control" placeholder="رمز عبور را وارد کنید">
                            </div>
                            <div class="form-group">
                                    <label>تکرار رمز عبور</label>
                                    <input asp-for="RePassword" class="form-control" placeholder="رمز عبور را وارد کنید">
                                </div>
                          


                            <button type="submit" class="btn btn-primary mt-4">ثبت</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

}

