@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block">
    <div class="container" style="margin-top:200px;margin-bottom:100px;direction:rtl;text-align:right">
        <div class="row">

            <div class="col-md-6 d-flex mt-4 mt-md-0">
                <div class="card flex-grow-1 mb-0">
                    <div class="card-body">
                        <h3 class="card-title">ثبت نام</h3>
                        <form asp-action="Register" asp-controller="Account">
                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" style="color:red"></div>
                                <label>آدرس ایمیل</label>
                                <input asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
                            </div>
                            <div class="form-group">
                                <label>رمز عبور</label>
                                <input asp-for="Password" class="form-control" placeholder="رمز عبور را وارد کنید">
                            </div>
                            @*<div class="form-group">
                                <label>تکرار رمز عبور</label>
                                <input type="password" class="form-control" placeholder="رمز عبور را وارد کنید">
                            </div>*@
                        <div >
                            <div class="g-recaptcha" data-sitekey="6LcZ5LMaAAAAAKvt_KhKEeUZQfbq115HjNCiQHFm"></div>
                            <span id="recaptchaerror" style="color:red"></span>
                        </div>


                            <button type="submit" class="btn btn-primary mt-4">ثبت نام</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Layout/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?hl=fa"></script>
    <script>
        $("form").submit(function (event) {
            var recaptcha = $("#g-recaptcha-response").val();
            if (recaptcha === "") {
                event.preventDefault();
                $("#recaptchaerror").text("لطفا احراز هویت را انجام دهید")
            }
        });
    </script>
}
