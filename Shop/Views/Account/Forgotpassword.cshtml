@model ForgotPassword
@{
    ViewData["Title"] = "Forgotpassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block">
    <div class="container" style="margin-top:200px;margin-bottom:100px;direction:rtl;text-align:right">
        <div class="row">
            <div class="col-md-6 d-flex mt-4 mt-md-0">
                <div class="card flex-grow-1 mb-0">
                    <div class="card-body">
                        <h3 class="card-title">یادآوری کلمه عبور</h3>
                        <form asp-action="Forgotpassword" asp-controller="Account">
                            <div class="form-group">
                                <label>آدرس ایمیل</label>
                                <input asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
                            </div>
                            <button type="submit" class="btn btn-primary mt-4">یادآوری کلمه عبور</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

