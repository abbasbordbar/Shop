@model IEnumerable<Shop.Models.MainMenu>

@{
    ViewData["Title"] = "MenuList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="background-color:white; margin-right:300px;height:700px">

    <a class="btn btn-success" asp-action="CreatMenu" asp-controller="Modules">دسته بندی جدید</a>


    <div class="row" style="margin-top:100px">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuTitle)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sort)
                    </th>


                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MenuId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MenuTitle)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sort)
                        </td>

                        <td>
                            <a  class="btn btn-info" asp-action="EditMenu" asp-controller="Modules" asp-route-Id="@item.MenuId">ویرایش</a> 
                            
                            <a class="btn btn-danger" asp-action="DeleteMenu" asp-controller="Modules" asp-route-Id="@item.MenuId">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>
