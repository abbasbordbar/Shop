    <script>
        var avatarmodal = $('[data-remodal-id=avatar]').remodal();
        $('.c-profle_box-avatar_edit').click(function () {

            avatarmodal.open();
        });

        $('.js-change-avatar').click(function () {
            var id = $(this).data("id");
            $.ajax({
                type: 'POST',
                url: '/profile/ChangeAvatar',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        avatarmodal.close();
                        $('.c-profle_box-avatar').css('background-image', 'url(/svg/avatar/' + id + '.svg)')
                    }
                    else {
                        avatarmodal.close();
                    }
                },
